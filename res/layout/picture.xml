<com.ht.huaxin.view.MyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

  
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="0dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp" >

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/album_title"
                android:textColor="@color/album_title_1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/picture_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/album_title"
                android:textColor="@color/fade_black_2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/picture_index"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="right"
                android:paddingBottom="5dp"
                android:text="@string/page_index"
                android:textColor="@color/album_title_1"
                android:textSize="18sp" />
        </LinearLayout>

        <com.ht.huaxin.view.ShaderView
            android:id="@+id/picture_img"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:longClickable="true"
            android:background="@drawable/b"
            android:scaleType="centerCrop"
            android:padding="0px"
            android:layout_margin="0px"
             />

        <TextView
            android:id="@+id/picture_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/album_title"
            android:textColor="@color/fade_black"
            android:textSize="14sp"
            android:layout_marginTop="10dp" />

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
    </LinearLayout>

</com.ht.huaxin.view.MyScrollView>